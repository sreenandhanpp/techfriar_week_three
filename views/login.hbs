<section>
    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-12 col-sm-8 col-md-4 m-auto">
                <div class="card border-0 shadow">
                    <div class="card-body ">
                        <svg class="mx-auto d-flex justify-content-center my-4" xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor"
                            class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                            <path fill-rule="evenodd"
                                d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                        </svg>
                        <form action="/login" method="post">
                            <input type="text" name="email" id="" class="form-control my-3 py-2" placeholder="Email">
                            <input type="password" name="password" id="" class="form-control my-3 py-2" placeholder="Password">
                        {{#if logErr}}
                            <p class="text-danger">Incorrect username or password</p>
                        {{/if}}
                        <div class="text-center mt-3">
                            <input type="submit" class="btn btn-primary m-3" value="Login">
                            <a href="" class="nav-link">Already have an account ?</a>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>